@model Cecilo.Models.Belgelerimiz

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AbatPanel/Views/Shared/_CeciloPanel.cshtml";
}

    <div class="m-grid__item m-grid__item--fluid m-wrapper">

        <div class="m-content">
            <div class="row">

                <div class="col-md-12">


                    <!--begin::Portlet-->
                    <div class="m-portlet m-portlet--tab">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <span class="m-portlet__head-icon m--hide">
                                        <i class="la la-gear"></i>
                                    </span>
                                    <h3 class="m-portlet__head-text">
                                        Square & Solid Input Style
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <!--begin::Form-->
                        <form class="m-form m-form--fit m-form--label-align-right" action="/abatpanel/belgelerimiz/edit/@Model.Id" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="m-portlet__body">
                                <div class="form-group m-form__group m--margin-top-10">
                                    <div class="alert m-alert m-alert--default" role="alert">
                                        The example form below demonstrates common HTML form elements solid background style:
                                    </div>
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="exampleInputEmail1">Belge Adı</label>


                                    @Html.EditorFor(model => model.BelgeAdi, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Belge Adı" } })
                                    @Html.ValidationMessageFor(model => model.BelgeAdi, "", new { @class = "text-danger" })

                                </div>
                                
                                <div class="form-group m-form__group">
                                    <label for="exampleTextarea">Resim</label>

                                    <input type="file" name="resim">
                                </div>
                            </div>
                            <div class="m-portlet__foot m-portlet__foot--fit">
                                <div class="m-form__actions">
                                    <button type="submit" class="btn btn-success">Güncelle</button>

                                    <button formaction="/abatpanel/belgelerimiz/delete/@Model.Id" type="submit" class="btn btn-danger">Sil</button>
                                    <a href="~/abatpanel/belgelerimiz/index" type="reset" class="btn btn-secondary">Vazgeç</a>
                                </div>
                            </div>
                        </form>
                        <div class="card-panel container">
                            <p>
                                <img class="img-fluid" width="200" src="@Model.Image" alt="@Model.BelgeAdi" />
                            </p>


                            <p>If you want to delete this image,you can upload new image</p>
                        </div>

                        <!--end::Form-->
                    </div>

                    <!--end::Portlet-->



                </div>
            </div>
        </div>
    </div>