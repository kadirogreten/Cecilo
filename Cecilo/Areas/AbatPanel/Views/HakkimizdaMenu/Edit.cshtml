@model Cecilo.Models.HakkimizdaMenu
@using Cecilo.Helpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AbatPanel/Views/Shared/_CeciloPanel.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">

    <div class="m-content">
        <div class="row">

            <div class="col-md-12">


                <!--begin::Portlet-->
                <div class="m-portlet m-portlet--tab">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon m--hide">
                                    <i class="la la-gear"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    Square & Solid Input Style
                                </h3>
                            </div>
                        </div>
                    </div>

                    <!--begin::Form-->
                    <form class="m-form m-form--fit m-form--label-align-right" action="/abatpanel/hakkimizdamenu/edit/@Model.Id" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="m-portlet__body">
                            <div class="form-group m-form__group m--margin-top-10">
                                <div class="alert m-alert m-alert--default" role="alert">
                                    The example form below demonstrates common HTML form elements solid background style:
                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleInputEmail1">Menü Adı</label>


                                @Html.EditorFor(model => model.MenuAdi, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Menü Adı" } })
                                @Html.ValidationMessageFor(model => model.MenuAdi, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleInputPassword1">Menü Başlığı</label>
                                @Html.EditorFor(model => model.MenuBaslik, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Menü Başlığı" } })
                                @Html.ValidationMessageFor(model => model.MenuBaslik, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group m-form__group">
                                <label for="exampleInputAciklama1">Açıklama</label>
                                @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Menü Açıklama" } })
                                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group m-form__group">
                                <label for="exampleTextarea">Detay</label>
                                @Html.CkeditorFor(model => model.Detail)
                                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    @Html.HiddenFor(model => model.Image)

                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleInputLang1">Dil</label>

                                @Html.EnumDropDownListFor(model => model.Lang, "Dil Seçiniz", new { @class = "form-control m-input m-input--solid" })
                                @Html.ValidationMessageFor(model => model.Lang, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleTextarea">Resim</label>

                                <input type="file" name="resim">
                            </div>
                        </div>
                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">
                                <button type="submit" class="btn btn-success">Güncelle</button>

                                <button formaction="/abatpanel/hakkimizdamenu/delete/@Model.Id" type="submit" class="btn btn-danger">Sil</button>
                                <a href="~/abatpanel/hakkimizdamenu/index" type="reset" class="btn btn-secondary">Vazgeç</a>
                            </div>
                        </div>
                    </form>
                    <div class="card-panel container">
                        <p>
                            <img class="img-fluid" width="200" src="@Model.Image" alt="@Model.MenuAdi" />
                        </p>


                        <p>If you want to delete this image,you can upload new image</p>
                    </div>

                    <!--end::Form-->
                </div>

                <!--end::Portlet-->
                

                
            </div>
        </div>
    </div>
</div>

